#include <iostream>
#include <math.h>
using namespace std;
double kr(double R){
return 3.14*R*R;
}
double pr(double X,double Y){
return X*Y;
}
double tr(double a,double b,double c){
return sqrt((a+b+c)/2*((a+b+c)/2-a)*((a+b+c)/2-b)*((a+b+c)/2-c));
}
